{% extends "layout.jinja2" %}


{% block head %}
     <link href="{{ request.static_path('stock_analysis:static/src/style/boot-header.css') }}" rel="stylesheet" />
     <link href="{{ request.static_path('stock_analysis:static/src/style/detail.css') }}" rel="stylesheet" />
{% endblock head %}


{% block body %}
<nav class="navbar navbar-expand-lg navbar-dark bg-primary">
  <a class="navbar-brand portfolio-font" href={{ request.route_url('home') }}>Zephyr Stock Analysis</a>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
    </ul>
      <ul class="nav navbar-nav" class="hamberger-links">
        <li class="nav-item" class="user_nav">
          <a class="nav-link" href={{ request.route_url('detail') }}>Analysis</a>
        </li>
        {% if request.authenticated_userid %}
        <li class="nav-item" class="user_nav">
          <a class="nav-link" href={{ request.route_url('portfolio') }}>My Portfolio</a>
        </li>
        <li class="nav-item" class="user_nav">
          <a class="nav-link" href={{ request.route_url('logout') }}>Logout</a>
        </li>
        {% else %}
        <li class="nav-item" class="user_nav">
          <a class="nav-link" href={{ request.route_url('login') }}>Login</a>
        </li>
        <li class="nav-item" class="user_nav">
          <a class="nav-link" href={{ request.route_url('register') }}>Register</a>
        </li>
        {% endif %}
      </ul>
  </div>
</nav>

{% block detail %}{% endblock %}

{% endblock body %}